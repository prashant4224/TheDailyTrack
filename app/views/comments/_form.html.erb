<%#= form_for([parent, parent.comments.build], remote: true) do |f| %>
  <%#= f.hidden_field :commentable_type, :value => parent.class.name %>
  <%#= f.hidden_field :commentable_id, :value => parent.id %>
  <%#= f.hidden_field :user_id, :value => current_user.id if current_user %>
<%= form_for([@team, @plan, @phase, @objective, @post, @comment]) do |f| %>
  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :body, :cols => "60", :rows => "1", class: "new-comment-text" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Comment'  %>
    <%#= link_to t('.cancel', :default => t("helpers.links.cancel")),
                comments_path, :class => 'btn', style: "visibility: hidden;" %>
  </div>
<% end %>
