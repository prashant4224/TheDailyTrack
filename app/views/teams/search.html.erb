
<ul>
  <% @team_list.each do |team| %>
    <li>
      <h3>
        <%= link_to team.try(:highlight).try(:name) ? team.highlight.name[0].html_safe : team.name,
          controller: "tickets",
          action: "show",
          id: team.id%>
      </h3>
      <% if team.try(:highlight).try(:description) %>
        <% team.highlight.description.each do |snippet| %>
          <p><%= snippet.html_safe %>...</p>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>