
<ul>
  <% @tickets.each do |ticket| %>
    <li>
      <h3>
        <%= link_to ticket.try(:highlight).try(:title) ? ticket.highlight.title[0].html_safe : ticket.title,
          controller: "tickets",
          action: "show",
          id: ticket._id%>
      </h3>
      <% if ticket.try(:highlight).try(:body) %>
        <% ticket.highlight.body.each do |snippet| %>
          <p><%= snippet.html_safe %>...</p>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>